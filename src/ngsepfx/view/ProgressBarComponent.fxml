<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml"
styleClass="prog-bar-box">
	<GridPane styleClass="prog-bar-labels-grid-pane">
		<Text fx:id="taskNameText" GridPane.columnIndex="0"
		GridPane.rowIndex="0"></Text>
		<Text fx:id="fileNameText" GridPane.columnIndex="1"
		GridPane.rowIndex="0" GridPane.columnSpan="2"></Text>
	</GridPane>
	<HBox styleClass="prog-bar-labels-box">
		<ProgressBar fx:id="taskProgressBar"/>
		<Button onAction="#cancelProcess">
			<graphic>
				<ImageView>
					<Image url="@/ngsepfx/view/images/process-stop.png"/>
				</ImageView>
			</graphic>
		</Button>
	</HBox>
</fx:root>





