<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<?import ngsepfx.view.component.ValidatedTextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1" id="mainContainer">
	<GridPane styleClass="grid-pane">
	
		<Label fx:id="fmIndexFileLabel" GridPane.rowIndex="0" GridPane.columnIndex="0">(*) Input FM File:</Label>
		<ValidatedTextField fx:id="fmIndexFileTextField" label="$fmIndexFileLabel"
							GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="3" styleClass="input-file"
							validators="INPUT_FILE, MANDATORY" />
		<Button onAction="#changeInputFile" userData="$fmIndexFileTextField" text="..." GridPane.rowIndex="0" GridPane.columnIndex="4" />
		
		<Label fx:id="inputFileLabel" GridPane.rowIndex="1" GridPane.columnIndex="0">(*) Input Fastq File:</Label>
		<ValidatedTextField fx:id="inputFileTextField" label="$inputFileLabel"
							GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="3" styleClass="input-file"
							validators="INPUT_FILE, MANDATORY" />
		<Button onAction="#changeInputFile" userData="$inputFileTextField" text="..." GridPane.rowIndex="1" GridPane.columnIndex="4" />
		
		<Label fx:id="inputFile2Label" GridPane.rowIndex="2" GridPane.columnIndex="0"> Input Fastq File 2:</Label>
		<ValidatedTextField fx:id="inputFile2TextField" label="$inputFile2Label"
							GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="3" styleClass="input-file"
							validators="INPUT_FILE" />
		<Button onAction="#changeInputFile" userData="$inputFile2TextField" text="..." GridPane.rowIndex="2" GridPane.columnIndex="4" />
					
		<Label fx:id="knownSTRsFileLabel" GridPane.rowIndex="3" GridPane.columnIndex="0"> Input Known STRs File:</Label>
		<ValidatedTextField fx:id="knownSTRsFileTextField" label="$knownSTRsFileLabel"
							GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.columnSpan="3" styleClass="input-file"
							validators="INPUT_FILE" />
		<Button onAction="#changeInputFile" userData="$inputFile2TextField" text="..." GridPane.rowIndex="3" GridPane.columnIndex="4" />

		<Label fx:id="outputFileLabel" GridPane.rowIndex="4" GridPane.columnIndex="0">(*) Output File:</Label>
		<ValidatedTextField fx:id="outputFileTextField" label="$outputFileLabel"
							GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.columnSpan="3" styleClass="output-file"
							validators="OUTPUT_FILE, MANDATORY"/>
		<Button onAction="#changeOutputFile" userData="$outputFileTextField" text="..." GridPane.rowIndex="4" GridPane.columnIndex="4" />	
	
	</GridPane>
	<HBox >
		<Button onAction="#submitTask" text="Reads Aligner" />
	</HBox>
</VBox>