<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<?import ngsepfx.view.component.ValidatedTextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1" id="mainContainer">
	<GridPane styleClass="grid-pane">

		<Label fx:id="inputDirectoryLabel" GridPane.rowIndex="0" GridPane.columnIndex="0">(*) Samples Input Directory:</Label>
		<ValidatedTextField fx:id="inputDirectoryTextField" label="$inputDirectoryLabel"
							GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.columnSpan="3" styleClass="input-file"
							validators="INPUT_FILE, MANDATORY" />
		<Button onAction="#changeInputFile" userData="$inputDirectoryTextField" text="..." GridPane.rowIndex="0" GridPane.columnIndex="4" />

		<Label fx:id="filesDescriptor" GridPane.rowIndex="1" GridPane.columnIndex="0">Sample Files Descriptor:</Label>
		<ValidatedTextField fx:id="filesDescriptorTextField" label="$filesDescriptorLabel"
							GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="3" styleClass="input-file"
							validators="INPUT_FILE" />
		<Button onAction="#changeInputFile" userData="$filesDescriptorTextField" text="..." GridPane.rowIndex="1" GridPane.columnIndex="4" />

		<Label fx:id="outputPrefixLabel" GridPane.rowIndex="4" GridPane.columnIndex="0">(*) Output File:</Label>
		<ValidatedTextField fx:id="outputPrefixTextField" label="$outputPrefixLabel"
							GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.columnSpan="3" styleClass="output-file"
							validators="OUTPUT_FILE, MANDATORY"/>
		<Button onAction="#changeOutputFile" userData="$outputPrefixTextField" text="..." GridPane.rowIndex="4" GridPane.columnIndex="4" />

	</GridPane>

	<HBox styleClass="hbox">
		<Label fx:id="kmerLengthLabel">Kmer length:</Label>
		<ValidatedTextField fx:id="kmerLengthTextField" label="$kmerLengthLabel"
							validators="POSITIVE_NUMBER, INT"/>

		<Label fx:id="maxNumClustersLabel">Maximum Number of Clusters:</Label>
		<ValidatedTextField fx:id="maxNumClustersTextField" label="$maxNumClustersLabel"
							validators="POSITIVE_NUMBER, INT"/>
	</HBox>

	<HBox styleClass="hbox">
		<Label fx:id="maxBaseQSLabel">Maximum value allowed for a base quality score:</Label>
		<ValidatedTextField fx:id="maxBaseQSTextField" label="$maxBaseQSLabel"
							validators="POSITIVE_NUMBER, INT"/>

		<Label fx:id="minQualityLabel">Minimum variant quality:</Label>
		<ValidatedTextField fx:id="minQualityTextField" label="$minQualityLabel"
							validators="POSITIVE_NUMBER, INT"/>
	</HBox>

	<HBox styleClass="hbox">
		<Label fx:id="heterozygosityRateLabel">Prior heterozygosity rate:</Label>
		<ValidatedTextField fx:id="heterozygosityRateTextField" label="$heterozygosityRateLabel"
							validators="POSITIVE_NUMBER"/>

		<Label fx:id="normalPloidyLabel">Default ploidy of the samples:</Label>
		<ValidatedTextField fx:id="normalPloidyTextField" label="$normalPloidyLabel"
							validators="POSITIVE_NUMBER, INT"/>
	</HBox>

	<HBox styleClass="hbox">
		<Label fx:id="numThreadsLabel">Number of threads to process read clusters:</Label>
		<ValidatedTextField fx:id="numThreadsTextField" label="$numThreadsLabel"
							validators="POSITIVE_NUMBER"/>
	</HBox>

	<HBox >
		<Button onAction="#submitTask" text="DeNovoGBS" />
	</HBox>

</VBox>
